{
    "name": "nexuslight",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "start": "NODE_ENV=production node server.js",
        "dev": "nodemon server.js",
        "test": "NODE_OPTIONS=--experimental-vm-modules jest --no-cache --verbose",
        "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
        "test:api": "NODE_OPTIONS=--experimental-vm-modules jest tests/api --runInBand",
        "lint": "eslint . --ext .js",
        "lint:fix": "eslint --fix . --ext .js",
        "format": "prettier --write \"**/*.{js,json,md,html,css}\"",
        "prepare": "husky install"
    },
    "dependencies": {
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.4.1",
        "express": "^4.18.2",
        "googleapis": "^148.0.0",
        "helmet": "^7.1.0",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "husky": "^9.0.11",
        "jest": "^29.7.0",
        "nodemon": "^3.0.3",
        "prettier": "^3.2.5",
        "supertest": "^6.3.4"
    },
    "jest": {
        "testEnvironment": "node",
        "transform": {},
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/tests/",
            "/public/"
        ],
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/$1"
        }
    },
    "eslintConfig": {
        "env": {
            "node": true,
            "es2021": true,
            "jest": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:prettier/recommended"
        ],
        "rules": {
            "no-console": "warn",
            "prettier/prettier": [
                "error",
                {
                    "endOfLine": "auto"
                }
            ]
        }
    },
    "prettier": {
        "printWidth": 100,
        "tabWidth": 2,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "endOfLine": "auto"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
